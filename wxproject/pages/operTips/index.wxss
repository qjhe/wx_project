/* pages/operTips/index.wxss */

page {
  height: 100%;
}

.strategy-wrapper {
  height: 100%;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 30%;
}

.cur {
  color: #f65959;
  border-bottom: 4rpx solid #f65959;
}

swiper {
  height: calc(100% - 46px);
  display: block;
}

.img-body {
  width: 93%;
  margin: 10px auto;
  font-size: 14px;
  line-height: 20px;
}

.img-body .big {
  font-size: 16px;
  line-height: 20px;
  margin-bottom: 15px;
}

.img-body .img {
  display: block;
  margin-top: 5px;
  width: 100%;
}
