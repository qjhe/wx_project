/* pages/mobileTicket/index.wxss */
.t-info-wrapper{
  background-color: #fff;
  padding: 21px 0 11px;
}
.t-info-wrapper .ticket-titlle{
  font-size: 24px;
  color: #333A48;
  text-align: center;
}
.t-info-wrapper .o-tips{
  margin-top: 12px;
  line-height: 22px;
  font-size: 14px;
  color: #656E7B;
  text-align: center;
}
.t-info-wrapper .a{
  color: #4D82F3;
  text-decoration: underline;
}
.t-info-wrapper .show-details{
  margin-top: 15px;
  color: #4D82F3;
  text-align: center;
}
.t-info-wrapper .show-details .right-icon{
  position: relative;
  top: -1px;
  display: inline-block;
  width: 6px;
  height: 6px;
  border-right: 1px solid #4D82F3;
  border-bottom: 1px solid #4D82F3;
  transform: rotate(-45deg);
}
.operator-form{
  margin-top: 12px;
  padding-left: 16px;
  background-color: #ffffff;
  overflow: hidden;
}
.input-box{
  display: flex;
  border-bottom: 1px solid #e6e7ea;
}
.input-box .text{
  flex: 0 0 98px;
  height: 56px;
  line-height: 56px;
  font-size: 16px;
  text-indent: 14px;
  color: #333a48;
}
.input-box .input-view{
  flex: 1;
  padding: 13px 0;
}
.input-box .input{
  flex: 1;
  padding: 0 42px 0 0;
  text-align: left;
  box-sizing: border-box;
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  color: #999;
  background: #fff;
  outline: none;
}
.button-box{
  margin-top: 40px;
}
.button-wrapper{
  padding: 0 5.5% 10px 0;
}
.button-wrapper .button{
    display: block;
    width: 100%;
    margin: 0 auto;
    padding: 14px 16px;
    line-height: 1;
    font-size: 18px;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    background-image: -webkit-gradient(linear, left top, right top, color-stop(26%, #5b9afc), to(#385fe5));
    background-image: linear-gradient(90deg, #5b9afc 26%, #385fe5 100%);
    -webkit-box-shadow: 0 5px 10px 0 #a1c4f8;
    box-shadow: 0 5px 10px 0 #a1c4f8;
    border: none;
    border-radius: 100px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    outline: none;
    -webkit-tap-highlight-color: transparent;
}